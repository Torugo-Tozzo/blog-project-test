<%- include("partials/header") %>
    <div class="container">
      <h1>Formulário de Publicação</h1>
      <form method="post">
        <div class="form-group">
          <label for="tituloInput">Título:</label>
          <input name="titulo" class="form-control" id="tituloInput" placeholder="Digite o título" style="width: 50%;">
        </div>
        <div class="form-group">
          <label for="textoInput">Texto:</label>
          <textarea name="composition" class="form-control" id="textoInput" rows="12" placeholder="Digite o texto" style="width: 100%;"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Publicar</button>
      </form>
    </div>
<%- include("partials/footer") %>


